    "knex:migrate": "node --loader ts-node/esm ./node_modules/knex/bin/cli.js --knexfile ./src/server/database/knex/Environment.ts migrate:latest",
    "knex:seed": "node --loader ts-node/esm ./node_modules/knex/bin/cli.js --knexfile ./src/server/database/knex/Environment.ts seed:run"
  },
